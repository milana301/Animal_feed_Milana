<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe motion:targetId="@+id/button"
            motion:clickAction="toggle"/>

        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="52dp"
            android:layout_marginTop="56dp"
            motion:layout_constraintTop_toTopOf="@+id/linearLayout"
            android:layout_width="48dp"
            android:id="@+id/button"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/button"
            android:layout_marginTop="72dp"
            android:id="@+id/imageView13"
            android:layout_marginLeft="19dp" />
        <Constraint
            android:layout_height="199dp"
            android:layout_width="416dp"
            android:id="@+id/imageView16"
            android:layout_marginTop="500dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/linearLayout" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView14"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="-60dp"
            motion:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView15"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="-60dp"
            motion:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView_anim"
            android:layout_marginStart="137dp"
            android:layout_marginTop="565dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_width="408dp"
            android:layout_height="52dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"
            android:id="@+id/button"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/button"
            android:layout_marginTop="72dp"
            android:id="@+id/imageView13"
            android:layout_marginLeft="379dp" />
        <Constraint
            android:layout_height="199dp"
            android:layout_width="416dp"
            android:id="@+id/imageView16"
            android:layout_marginTop="480dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/linearLayout"
            motion:layout_constraintBottom_toTopOf="@+id/imageView15" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="-60dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView14"
            motion:layout_constraintTop_toTopOf="@+id/imageView16" />

        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView14"
            android:layout_marginBottom="10dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>

        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/imageView15"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="80dp"
            motion:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/textView_anim"
            android:layout_marginStart="137dp"
            android:layout_marginTop="430dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"/>
    </ConstraintSet>


</MotionScene>